---
import Container from "./Container.astro"
import Topic from "./Topic.astro"

const services = [
    {
        title: "Marketing des Réseaux Sociaux",
        description: "Campagnes stratégiques sur les réseaux sociaux qui stimulent l'engagement, développent la notoriété de la marque et génèrent des prospects via Instagram et Facebook.",
        icon: "material-symbols:interests",
        features: [
            "Stratégie de Contenu",
            "Gestion de Communauté",
            "Publicité Payante",
            "Analyse et Reporting"
        ]
    },
    {
        title: "Acquisition de Clients",
        description: "Stratégies d'acquisition de clients axées sur les résultats, combinant expertise commerciale, tunnels marketing et campagnes à fort taux de conversion.",
        icon: "mdi:account-group",
        features: [
            "Génération de Prospects",
            "Tunnels de Vente",
            "Optimisation de Conversion",
            "Fidélisation Client"
        ]
    },
    {
        title: "Stratégie Digitale",
        description: "Stratégies digitales complètes adaptées à vos objectifs commerciaux, de l'étude de marché à la mise en œuvre et l'optimisation.",
        icon: "mdi:strategy",
        features: [
            "Analyse de Marché",
            "Planification de Campagne",
            "Suivi de Performance",
            "Optimisation de Croissance"
        ]
    },
    {
        title: "Création de Contenu",
        description: "Services professionnels de création de contenu incluant photographie, rédaction et design pour améliorer la présence de votre marque.",
        icon: "mdi:pencil-box-multiple",
        features: [
            "Photographie Professionnelle",
            "Rédaction Web",
            "Design Visuel",
            "Storytelling de Marque"
        ]
    }
];
---

<!-- Add Iconify Script -->
<script is:inline src="https://code.iconify.design/3/3.1.0/iconify.min.js"></script>

<Container>
    <div class="relative flex flex-col items-center md:flex-row">
        <Topic 
            title="Nos Services" 
            description="Solutions Marketing Digitales Complètes pour Développer Votre Entreprise"
        />
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mt-12">
        {services.map((service, index) => (
            <div class="p-8 bg-zinc-900 rounded-[45px] shadow-card border border-zinc-700 hover:border-zime-44 text-white transition-all duration-300 group">
                <div class="flex items-start gap-6 mb-6">
                    <div class="w-12 h-12 flex items-center justify-center bg-[#1e1f24] rounded-full">
                        <span 
                            class="iconify w-7 h-7" 
                            data-icon={service.icon}
                            style="color: #7dd3fc;"
                        ></span>
                    </div>
                    <div>
                        <h3 class="text-2xl font-semibold mb-3">{service.title}</h3>
                        <p class="text-zinc-400">{service.description}</p>
                    </div>
                </div>
                <ul class="grid grid-cols-2 gap-4">
                    {service.features.map(feature => (
                        <li class="flex items-center gap-2">
                            <svg class="w-5 h-5 text-zime-44" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                            </svg>
                            <span class="text-sm text-zinc-300">{feature}</span>
                        </li>
                    ))}
                </ul>
            </div>
        ))}
    </div>
</Container>